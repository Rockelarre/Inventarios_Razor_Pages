@page "{id:int?}"
@model RPInventarios.Pages.Usuarios.CambiarContrasenaModel
@{
    ViewData["Title"] = "Cambiar Contraseña del usuario " + Model.Usuario.Username;
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Usuario.Id" />
            <div class="form-group">
                <label asp-for="Usuario.Username" class="control-label"></label>
                <input asp-for="Usuario.Username" class="form-control" readonly="readonly" />
                <span asp-validation-for="Usuario.Username" class="text-danger"></span>
            </div>           
             <div class="form-group">
                <label asp-for="Usuario.Contrasena" class="control-label"></label>
                <input asp-for="Usuario.Contrasena" class="form-control" />
                <span asp-validation-for="Usuario.Contrasena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.ConfirmarContrasena" class="control-label"></label>
                <input asp-for="Usuario.ConfirmarContrasena" class="form-control" />
                <span asp-validation-for="Usuario.ConfirmarContrasena" class="text-danger"></span>
            </div>
             <div class="form-group mt-3">
                <partial name="Acciones/_Edit" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
